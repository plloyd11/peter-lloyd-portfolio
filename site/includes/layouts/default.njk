<!doctype html>
<html lang="en" class="min-h-full antialiased">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if meta_title %}{{ meta_title }}{% else %}{{ title }}{% endif %} | Designer, Front-end Developer &amp;
        Photographer</title>
    <meta name="description"
        content="{% if meta_description %}{{ meta_description }}{% else %}{{ excerpt }}{% endif %}">
    {% if page.fileSlug === 'blog' %}
    <meta name="robots" content="noindex,follow" />
    {% else %}
    <meta name="robots" content="index,follow" />
    {% endif %}

    {# if your site's entire CSS comes in under 14kb, you may want to inline in the head #}
    {# include main.css if in development mode #}
    {% if helpers.environment === "development" %}
    <link rel="stylesheet" href="/css/main.css">
    {% else %}
    {# else, use the minified css file for production #}
    <link rel="stylesheet" href="/css/main.min.css">
    {% endif %}

    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.0.1/dist/alpine.js" defer></script>

    {# include scripts #}
    {% if helpers.environment === "development" %}
    <script src="/js/main.js" defer></script>
    {% else %}
    <script src="/js/main.min.js" defer></script>
    {% endif %}

    {# include social meta tags #}
    {% include "components/social-meta.njk" %}

    {# lastly include favicon, fonts, etc #}
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,400;0,600;0,700;1,400&display=swap"
        rel="stylesheet">
    <link rel="icon" type="image/png" href="{{ site.images.favicon }}">

    {# canonical #}
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
</head>

<body {% if body_class %} id="{{ body_class }}" {% endif %} class="text-lg leading-normal text-purple-900">

    <a class="sr-only" href="#main">Skip to content</a>

    <div id="wrapper" class="relative flex flex-col min-h-screen pb-16 wrapper md:pb-0">

        {# include header #}
        {% include "components/header.njk" %}

        {# include content #}
        {{ content | safe }}

        {# include footer #}
        {% include "components/footer.njk" %}

    </div>

    {# include mobile nav #}
    {% include "components/mobile-nav.njk" %}

</body>

</html>